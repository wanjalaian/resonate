{
  "name": "audio-visualizer",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev --webpack",
    "build": "next build --webpack",
    "start": "next start",
    "lint": "eslint",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && NODE_ENV=development electron .\"",
    "electron:build": "next build && electron-builder",
    "electron:pack:mac": "next build && electron-builder --mac --x64 --arm64",
    "electron:pack:win": "next build && electron-builder --win --x64",
    "electron:rebuild": "electron-rebuild -f -w better-sqlite3"
  },
  "build": {
    "appId": "com.resonate.audiovisualizer",
    "productName": "Resonate",
    "copyright": "Copyright Â© 2025",
    "directories": {
      "output": "dist-electron"
    },
    "publish": {
      "provider": "github",
      "owner": "wanjalaian",
      "repo": "resonate",
      "releaseType": "release"
    },
    "files": [
      "electron/**/*",
      ".next/**/*",
      "public/**/*",
      "node_modules/**/*",
      "remotion/**/*",
      "components/**/*",
      "lib/**/*",
      "app/api/**/*",
      "next.config.*",
      "package.json"
    ],
    "asarUnpack": [
      "node_modules/better-sqlite3/**/*",
      "node_modules/bindings/**/*",
      "node_modules/@remotion/compositor-*/**/*",
      "remotion/**/*",
      "components/**/*",
      "lib/**/*"
    ],
    "mac": {
      "category": "public.app-category.music",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "public/icon.icns"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Audio"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@remotion/bundler": "^4.0.410",
    "@remotion/media-utils": "^4.0.410",
    "@remotion/player": "^4.0.410",
    "@remotion/renderer": "^4.0.410",
    "@remotion/zod-types": "^4.0.410",
    "@types/better-sqlite3": "^7.6.13",
    "clsx": "^2.1.1",
    "lucide-react": "^0.563.0",
    "next": "16.1.6",
    "process": "^0.11.10",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "remotion": "^4.0.410",
    "tailwind-merge": "^3.4.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@electron/rebuild": "~3.7.1",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "babel-plugin-react-compiler": "1.0.0",
    "concurrently": "^9.2.1",
    "css-loader": "^5.2.7",
    "electron": "^34.2.0",
    "electron-builder": "^26.8.1",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "postcss-loader": "^8.2.0",
    "style-loader": "^3.3.4",
    "tailwindcss": "^4",
    "typescript": "^5",
    "wait-on": "^9.0.4"
  }
}
